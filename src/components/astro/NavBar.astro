---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Chat', href: '/chat' },
  { name: 'Register', href: '/register' },
  { name: 'Dashboard', href: '/dashboard' },
];

// You would typically get this from your auth service
const isLoggedIn = false;
---

<nav class="bg-white shadow-lg">
  <div class="-6xl mx-auto px-4">
    <div class="flex justify-between">
      <div class="flex space-x-7">
        <div>
          <a href="/" class="flex items-center py-4 px-2">
            <span class="font-semibold text-gray-500 text-lg">Logo</span>
          </a>
        </div>
        <div class="hidden md:flex items-center space-x-1">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
              >
                {item.name}
              </a>
            ))
          }
        </div>
      </div>
      <div class="hidden md:flex items-center space-x-3">
        <a
          href={isLoggedIn ? '/signout' : '/signin'}
          class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-green-500 hover:text-white transition duration-300"
        >
          {isLoggedIn ? 'Sign Out' : 'Sign In'}
        </a>
      </div>
      <div class="md:hidden flex items-center">
        <button class="outline-none mobile-menu-button" aria-label="Toggle menu">
          <svg
            class="w-6 h-6 text-gray-500 hover:text-green-500"
            x-show="!showMenu"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <div class="hidden mobile-menu md:hidden">
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class="block py-2 px-4 text-sm hover:bg-green-500 hover:text-white transition duration-300"
        >
          {item.name}
        </a>
      ))
    }
    <a
      href={isLoggedIn ? '/signout' : '/signin'}
      class="block py-2 px-4 text-sm hover:bg-green-500 hover:text-white transition duration-300"
    >
      {isLoggedIn ? 'Sign Out' : 'Sign In'}
    </a>
  </div>
</nav>

<script>
  const btn = document.querySelector('button.mobile-menu-button');
  const menu = document.querySelector('.mobile-menu');

  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>
