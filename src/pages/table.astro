---
import Layout from '@/layouts/Layout.astro';
import Table from '@/components/vue/Table.vue';

const { cookies, redirect } = Astro;

const accessToken = cookies.get('sb-access-token');
const refreshToken = cookies.get('sb-refresh-token');

const mockData = {
  // 6 rows of data with id, name, and email

  rows: [
    {
      id: 1,
      name: 'John Doe',
      email: 'mail.com',
    },
    {
      id: 2,
      name: 'Jane Doe',
      email: 'mail.com',
    },
    {
      id: 3,
      name: 'John Smith',
      email: 'mail.com',
    },
    {
      id: 4,
      name: 'Jane Smith',
      email: 'mail.com',
    },
    {
      id: 5,
      name: 'John Johnson',
      email: 'mail.com',
    },
    {
      id: 6,
      name: 'Jane Johnson',
      email: 'mail.com',
    },
  ],

  columns: [
    {
      key: 'id',
      label: 'ID',
    },
    {
      key: 'name',
      label: 'Name',
    },
    {
      key: 'email',
      label: 'Email',
    },
  ],
};

if (accessToken && refreshToken) {
  return redirect('/dashboard');
}
---

<Layout title="Table">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <Table client:only="vue" columns={mockData.columns} rows={mockData.rows} />
  </div>
</Layout>

